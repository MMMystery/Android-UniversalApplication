<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clipToPadding="true"
    android:orientation="vertical"
    >

    <include layout="@layout/topbar_base" />

    <EditText
        android:id="@+id/newpostActivity_et_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="top|left"
        android:hint="填写帖子内容" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <LinearLayout
                android:id="@+id/newpostActivity_ll_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/newpostActivity_bt_addphoto"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@drawable/btn_camera_selected" />
            </LinearLayout>


        </HorizontalScrollView>


    </LinearLayout>

</LinearLayout>
